<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".AddContactActivity" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="369dp" >

        <TextView
            android:id="@+id/addContactTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add contact:"
            android:textSize="23dp" />

        <RelativeLayout
            android:id="@+id/nameImageLayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@+id/addContactTitle"
            android:layout_marginTop="30dp" >

            <EditText
                android:id="@+id/contactNameET"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:hint="Name"
                android:inputType="text" >
            </EditText>

            <ImageView
                android:id="@+id/contactImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/contactNameET"
                android:layout_marginLeft="30dp"
                android:src="@drawable/ic_contact_picture_2" />
        </RelativeLayout>

        <EditText
            android:id="@+id/contactSurnameET"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/addContactTitle"
            android:layout_below="@+id/nameImageLayout"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="Surname"
            android:inputType="text" />

        <EditText
            android:id="@+id/TelephoneNumberET"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/addContactTitle"
            android:layout_below="@+id/contactSurnameET"
            android:layout_marginTop="30dp"
            android:ems="10"
            android:hint="Telephone number"
            android:inputType="number" />

        <EditText
            android:id="@+id/emailET"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/addContactTitle"
            android:layout_below="@+id/TelephoneNumberET"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:hint="Email address"
            android:inputType="text" />

        <Button
            android:id="@+id/btnAddContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/emailET"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="Add contact" />
    </RelativeLayout>

</ScrollView>